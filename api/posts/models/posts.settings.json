{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Posts",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "description": {
      "type": "richtext",
      "required": true,
      "maxLength": 5000
    },
    "picture": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "date": {
      "type": "date"
    },
    "userID": {
      "via": "postID",
      "plugin": "users-permissions",
      "model": "user"
    },
    "title": {
      "type": "richtext",
      "required": true,
      "maxLength": 100
    },
    "postId": {
      "type": "uid"
    }
  }
}
